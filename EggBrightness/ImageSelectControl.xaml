<UserControl x:Class="EggBrightness.ImageSelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EggBrightness"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>
        <Button Width="50" Height="30" Content="Select" Click="SelectImage_OnClick"/>
        <Border Background="Gray" Margin="10">
            <Image Source="{Binding BitmapImage}" Height="300" />
        </Border>
    </StackPanel>
</UserControl>
